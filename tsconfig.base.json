{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "node",
    "baseUrl": "./",
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "declarationMap": true,
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@types/node"],
    "allowJs": true
  },
  "exclude": ["node_modules", "lib"]
}
